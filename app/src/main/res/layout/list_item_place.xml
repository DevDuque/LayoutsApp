<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/list_view_place"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/backgroundColor"
    >

    <ImageView android:id="@+id/img_place_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:src="@drawable/ic_launcher_background"/>

    <TextView android:id="@+id/txt_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/img_place_photo"

        android:textSize="20sp"
        android:text="Um lugar qualquer"
        android:fontFamily="@font/poppins"
        android:textColor="@color/textColor" />


    <TextView android:id="@+id/txt_place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/txt_place_name"
        android:layout_alignStart="@id/txt_place_name"

        android:fontFamily="@font/poppins"
        android:textColor="@color/textColor"
        android:text="Este Ã© um lugar qualquer que serve alguma coisa" />

        <LinearLayout android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"

            android:layout_alignBottom="@id/img_place_photo"
            android:layout_alignLeft="@id/txt_place_name"

            android:layout_marginTop="8dp">

            <ImageView android:id="@+id/star1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"

                android:src="@drawable/img_staractive" />

            <ImageView android:id="@+id/star2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"

                android:src="@drawable/img_staractive" />

            <ImageView android:id="@+id/star3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"

                android:src="@drawable/img_staractive" />

            <ImageView android:id="@+id/star4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"

                android:src="@drawable/img_staractive" />

            <ImageView android:id="@+id/star5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"

                android:src="@drawable/img_staractive" />
        </LinearLayout>
    
    <TextView android:id="@+id/txt_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/img_place_photo"

        android:text="0.4 KM"
        android:fontFamily="@font/poppins"
        android:textColor="@color/textColor" />
</RelativeLayout>